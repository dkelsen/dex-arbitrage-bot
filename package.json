{
  "name": "dex-arbitrage-bot",
  "version": "0.0.0",
  "description": "A bot monitoring and executing arbitrage opportunities on decentralized exchanges",
  "engines": {
    "node": "14.15.1"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./build/index.js",
    "start:dev": "nodemon --exec babel-node src/index.js",
    "build": "rm -rf build && mkdir build && babel src --out-dir build --copy-files",
    "fork": "ganache-cli -f \"${npm_package_config_node_url}\" -i 1 -p 7545 -u \"${npm_package_config_unlocked_address}\"",
    "deploy": "truffle compile && truffle migrate --reset --network",
    "console": "truffle console --network",
    "test": "truffle test --network"
  },
  "config": {
    "node_url": "https://cloudflare-eth.com/",
    "unlocked_address": "0x7AD1243179857B04763ECbCCe1F92C8572d46255"
  },
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "dotenv": "^8.2.0",
    "express": "^4.15.2",
    "moment-timezone": "^0.5.32",
    "node-fetch": "^2.6.1",
    "web3": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "nodemon": "^2.0.6"
  }
}
